!!! 5
html(ng-app='cwts')
  head
    title Heritage Sites of Makati
    meta(charset='utf8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='author', content='Tim Joseph Dumol')
    meta(name='viewport', content='width=device-width', initial-scale='1.0')
    - var lib_styles = ['amelia/bootstrap.min.css', 'bootstrap/css/bootstrap-responsive.min.css', 'toastr/toastr.min.css', 'font-awesome/css/font-awesome.min.css', 'angular-ui/angular-ui.min.css', 'select2/select2.css', 'leaflet/leaflet.css', 'bootstrap-lightbox/css/bootstrap-lightbox.min.css']
    each style in lib_styles
      link(rel='stylesheet', href='/lib/' + style)
    link(rel='stylesheet', href='/css/app.css')
  body
    noscript
      div Javascript must be enabled in order to use the UP Programming Guild Super Rankings
    .ng-cloak
      header.navbar.navbar-fixed-top
        .navbar-inner
          .container
            button.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.brand(href='/#/') Heritage Sites of Makati
            ul.nav
              li
                a(href='/#/') Home
              li
                a(href='/#/map') Map
      #main(role='main').container
        #content(ng-view)
        footer
          | Â© Copyright 2013 CWTS Section A Team A
    
    // scripts
    script
      window.one = {}
    - var libs = ['jquery-1.9.1.min.js', 'angular/angular.min.js', 'angular/angular-resource.min.js', 'bootstrap/js/bootstrap.min.js', 'toastr/toastr.js', 'ui-bootstrap-tpls-0.2.0.min.js', 'underscore-min.js', 'underscore.string.min.js', 'one-color.js', 'angular-ui/angular-ui.min.js', 'select2/select2.min.js', 'leaflet/leaflet.js', 'bootstrap-lightbox/js/bootstrap-lightbox.min.js']
    each lib in libs
      script(src='/lib/' + lib)
    - var scripts = ['app.js', 'routes.js', 'home.js', 'map.js', 'sites.js']
    each script in scripts
      script(src='/js/' + script)
